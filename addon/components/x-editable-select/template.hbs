<div class="selectContainer">
  <select class="ember-x-editable-select input-sm
    {{if isEditing "is-editing" "is-not-editing"}}
    {{if errorMessage "error"}}"
          onchange={{action (mut value) value="target.value"}}>
    {{#each content as |opt|}}
      <option value={{opt.value}} selected={{eq value opt.value}}>
        {{opt.text}}
      </option>
    {{/each}}
  </select>

  {{error-message errorMessage=errorMessage isEditing=isEditing tagName=''}}
</div>

{{editable-buttons
  cancelAction=(action 'cancelAction')
  isEditing=isEditing
  saveAction=(action 'saveAction')
  tagName=''}}